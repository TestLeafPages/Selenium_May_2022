package week2day2;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

import io.github.bonigarcia.wdm.WebDriverManager;

public class Facebook {
	public static void main(String[] arg) throws InterruptedException {
		WebDriverManager.chromedriver().setup();
		ChromeDriver driver = new ChromeDriver();
		driver.get("http://www.facebook.com");
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
		driver.findElement(By.xpath("//a[text()='Create New Account']")).click();
		
		driver.findElement(By.xpath("//input[@name='firstname']")).sendKeys("Vaishnavi");
		driver.findElement(By.xpath("//input[@name='lastname']")).sendKeys("A");
		driver.findElement(By.xpath("//input[@name='reg_email__']")).sendKeys("aishwarya@inwayhosting.com");
		driver.findElement(By.xpath("//input[@name='reg_email_confirmation__']")).sendKeys("aishwarya@inwayhosting.com");
		driver.findElement(By.xpath("//input[@name='reg_passwd__']")).sendKeys("AisWar@448");
		
		Select day = new Select(driver.findElement(By.xpath("//select[@id='day']")));
		day.selectByIndex(14);
	
	    Select month = new Select(driver.findElement(By.xpath("//select[@id='month']")));
	    month.selectByIndex(0);
	    Select year = new Select(driver.findElement(By.xpath("//select[@id='year']")));
	    year.selectByIndex(26);
	    Thread.sleep(5000);
	    WebElement radio = driver.findElement(By.xpath("//label[text()='Female']"));
	    radio.click();
	    driver.findElement(By.xpath("//button[text()='Sign Up']")).click();
	//age.selectByIndex(0);
	    //driver.close();
	}
}
